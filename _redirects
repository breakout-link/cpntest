# Cloudflare Pages redirects
# Handle WordPress-style pretty URLs

# Redirect common WordPress paths to static equivalents
/xmlrpc.php    /404.html   404
/wp-admin/*    /login/     301
/wp-login.php  /login/     301

# Handle feed redirects 
/feed/           /404.html   404
/comments/feed/  /404.html   404

# Ensure all assets are served properly
/wp-content/*    /wp-content/:splat   200
/wp-includes/*   /wp-includes/:splat  200

# Fallback for any other WordPress-specific URLs
/wp-*   /404.html   404

# Default fallback - serve index.html for any unmatched routes
/*      /index.html  200